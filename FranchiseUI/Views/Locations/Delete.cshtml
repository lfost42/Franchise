@model ParserLibrary.ITrackable

@{
    ViewData["Title"] = "Delete";
}

<link href="/css/site.css" rel="stylesheet" />

<div class="wrapper container" id="CRUD">
      <h3>Are you sure you want to delete this location?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GeoPoint.Latitude)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GeoPoint.Latitude)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.GeoPoint.Longitude)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GeoPoint.Longitude)
                </dd>
            </dl>

            <div class="row">
                <div class="col-auto">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>

                <div class="col-auto">
                    <div class="form-group">
                        <a class="btn-warning btn" asp-action="Index" method="post">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
