<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Franchise Analytics</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <meta name="title" property="og:title" content="Evaluates which franchise areas are in need of expansion." />
    <meta name="image" property="og:image" content="/img/app.png" alt="Franchise Analytics logo" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/5db21ba9c6.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/normalize.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/result.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Franchise Analytics</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://github.com/lfost42/Franchise">GitHub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="https://lfost42-portfolio.netlify.app">About Me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <div id="footer-wrapper">
        <section id="footer">
            <div class="container">
                <ul class="copyright">
                    &copy;2021 Lynda Foster
                </ul>

                <ul class="icons">
                    <li><a href="https://github.com/lfost42"><i class="icon fab fa-github fa-lg"></i></a></li>
                    <li>
                        <a href="https://www.reddit.com/user/lynda_"> 
                            <i class="icon fab fa-reddit-alien fa-lg"></i>
                        </a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/lynda-foster/">
                            <i class="icon fab fa-linkedin fa-lg"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
