@model ParserLibrary.ITrackable

@{
    ViewData["Title"] = "Edit Location";
}

<link href="/css/site.css" rel="stylesheet" />

<div class="wrapper">
    <section class="container" id="locations">

        <article id="content">
            <header>
                <h2>Edit Location</h2>
            </header>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GeoPoint.Latitude" class="control-label"></label>
                            <input asp-for="GeoPoint.Latitude" class="form-control" />
                            <span asp-validation-for="GeoPoint.Latitude" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GeoPoint.Longitude" class="control-label"></label>
                            <input asp-for="GeoPoint.Longitude" class="form-control" />
                            <span asp-validation-for="GeoPoint.Longitude" class="text-danger"></span>
                        </div>
                    </form>

                    <div class="row">
                        <div class="col-auto">
                            <div class="col form-group">
                                <input type="submit" class="button btn-warning" value="Commit" />
                            </div>
                        </div>
                        <div class="col-auto">
                            <a type="button" class="button btn-success" asp-action="Index">Cancel</a>
                        </div>
                    </div>

                    </div>
                </div>
        </article>
    </section>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
