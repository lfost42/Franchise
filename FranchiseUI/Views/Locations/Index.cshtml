@model IEnumerable<ParserLibrary.ITrackable>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
<link href="/css/site.css" rel="stylesheet" />

<div class="wrapper">
    <section class="container" id="locations">

        <article id="content">
            <header>
                <h2>Data Table</h2>
            </header>
            <p>
                @Html.ActionLink("Create", "Create", "Locations", null, new { @class = "btn" })
                @Html.ActionLink("Cancel", "Index", "Home", null, null, "promo", new { @class = "btn" }, null)
              
            </p>
            <table class="table locations" id="LocationsTable">

                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Latitude
                        </th>
                        <th>
                            Longitude
                        </th>
                        <th>
                            Location Name
                        </th>

                        <th></th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeoPoint.Latitude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeoPoint.Longitude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" alt="edit"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" alt="delete"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </article>

    </section>
</div>

@section scripts {
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>$(document).ready(function () {
            $('#LocationsTable').DataTable();
        });</script>
}
