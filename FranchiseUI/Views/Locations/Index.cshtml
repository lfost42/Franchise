@model IEnumerable<ParserLibrary.ITrackable>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
<link href="/css/site.css" rel="stylesheet" />

<div class="wrapper">
    <div class="container">

        <article id="content">
            <header>
                <h2>View Locations</h2>
            </header>
            <p>
                    <a asp-controller="Home" asp-action="Index">Cancel</a>
            </p>
            <table class="table locations" id="LocationsTable">
                <br />
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Latitude
                        </th>
                        <th>
                            Longitude
                        </th>
                        <th>
                            Location Name
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeoPoint.Latitude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeoPoint.Longitude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div class="row">
                                    <div class="mr-1 mb-1 col-md-12 col-lg-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id" alt="edit">Edit</a>
                                    </div>
                                    <div class="mr-1 col-md-12 col-lg-4">
                                        <a asp-action="Delete" asp-route-id="@item.Id" alt="delete">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </article>

    </div>
</div>

@section scripts {
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>$(document).ready(function () {
            $('#LocationsTable').DataTable();
        });</script>
}
